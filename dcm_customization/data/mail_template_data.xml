<?xml version="1.0" ?>
<odoo>

    <record id="ir_cron_contacts_add_posts" model="ir.cron">
        <field name="name">Midar: Add new contact to posts</field>
        <field name="model_id" ref="model_res_partner"/>
        <field name="state">code</field>
        <field name="code">model.add_contact_posts()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
    </record>


    <data noupdate="1">
        <!--Email template -->
        <record id="email_template_otp_partner" model="mail.template">
            <field name="name">Partner: OTP Send by Email</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="email_from">${(user.email_formatted) |safe}</field>
            <field name="partner_to">${object.id}</field>
            <field name="subject">Midar - One Time Password (OTP) To Verify Your Login</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
    <p style="margin: 0px; padding: 0px; font-size: 13px;">
        Dear ${object.name},
        <br/>
        <p>Greetings from Midar!</p>
        <br/>
        <p>One Time Password : <strong>${object.otp_token}</strong></p>
    </p>
</div>
            </field>
            <field name="lang">${object.lang}</field>
            <field name="user_signature" eval="False"/>
            <field name="auto_delete" eval="True"/>
        </record>

        <record model="ir.rule" id="res_partner_public_rule_midardir">
            <field name="name">res_partner: public: read access on contact</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[]</field>
            <field name="groups" eval="[(4, ref('base.group_public'))]"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
        </record>
    </data>
</odoo>
