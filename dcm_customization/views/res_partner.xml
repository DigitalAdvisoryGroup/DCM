<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="view_partner_category_form_dcm" model="ir.ui.view">
            <field name="name">res.partner.category.inherit.view.form</field>
            <field name="model">res.partner.category</field>
            <field name="inherit_id" ref="base.view_partner_category_form"/>
            <field name="arch" type="xml">
                <field name="parent_id" position="after">
                    <field name="partner_id" domain="[('is_company', '=', True)]"/>
                </field>
            </field>
        </record>


        <!-- res.partner inherit form view -->
        <record id="view_partner_form_dcm_inehrit" model="ir.ui.view">
            <field name="name">res.partner.inherit.view.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <!-- Add your xpath here -->
                <!-- <xpath expr="//field[@name='category_id']" position="after">
                     <field name="category_skill_ids" widget="many2many_tags"/>
                     <field name="category_res_ids" widget="many2many_tags"/>
                     <field name="social_group_id" widget="many2many_tags_open"/>
                     <field name="change_connection"/>
                     <field name="is_token_available"/>
                     <field name="partner_token_lines"/>
                     <field name="file_name_custom"/>
                 </xpath>
                 <xpath expr="//field[@name='image_1920']" position="attributes">
                     <attribute name="filename">file_name_custom</attribute>
                 </xpath>-->
                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="empl_number"/>
                    <field name="firstname"/>
                    <field name="familyname"/>
                    <field name="file_name_custom" invisible="1"/>
                </xpath>
                <notebook position="inside">
                    <page name="organisation" string="Organisation" autofocus="autofocus">
                        <div id="o_work_employee_container">
                            <div class="o_work_employee_main">

                                <!--<group string="Functional" name="row_1_middle">
                                    <field name="fu_key" string="FU Key"/>
                                    <field name="fu1_id" string="FU 1"/>
                                    <field name="fu2_id" string="FU 2"/>
                                    <field name="fu3_id" string="FU 3"/>
                                </group>-->

                            </div>

                            <div id="o_employee_right">
                                <group string="Line Organisation" name="row_1_left">
                                    <field name="function" string="Function"/>
                                    <field name="mlevel_id" string="Management level"/>
                                </group>

                                <h4 class="o_org_chart_title mb16 mt0">Chart</h4>
                                <field name="social_group_id" string="Org Unit" widget="sg_org_chart"/>
                            </div>

                            <div id="o_employee_right">
                                <group string="Functional Organisation" name="row_1_right">

                                </group>

                                <h4 class="o_org_chart_title mb16 mt0">Chart</h4>
                                <field name="social_group_fun_id" string="Functional Unit" widget="sg_fun_org_chart"/>
                            </div>

                        </div>
                    </page>
                    <page name="expertise" string="Expertise">

                    <group name="row_1_right">
                      <field name="category_skill_ids" string="Skills" widget="many2many_tags"/>
                      <field name="category_res_ids" string="Responsibilities" widget="many2many_tags"/>
                    </group>

                  </page>
                    <page name="midarapp_setting" string="MidarApp Settings">
                        <group name="row_1">

                            <group string="Profile Settings" name="row_1_left">

                                <field name="app_basic_info"/>
                                <field name="app_extended_info"/>
                            </group>
                            <group string="Connectivity" name="row_1_right">
                                <field name="otp_token" string="OTP Token"/>
                                <field name="change_connection"/>
                                <field name="is_token_available"/>
                                <field name="partner_token_lines"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

        <record id="view_partner_tree_dcm_inehrit" model="ir.ui.view">
            <field name="name">res.partner.inherit.view.tree</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <!-- Add your xpath here -->
                <xpath expr="//field[@name='active']" position="after">
                    <field name="is_token_available" optional="hide"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>