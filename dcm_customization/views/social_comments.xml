<odoo>
    <!-- social.bit.comments form view -->
    <record id="social_bit_comments_view_form" model="ir.ui.view">
        <field name="name">social.bit.comments.view.form</field>
        <field name="model">social.bit.comments</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="partner_id"/>
                        <field name="utm_campaign_id"/>
                        <field name="post_id"/>
                        <field name="record_type"/>
                        <field name="comment"/>
                        <field name="rating" />
                    </group>
                    <group>
                        <field name="image_ids" widget="many2many_binary" class="o_social_post_form_attachments" attrs="{'invisible': [('record_type', '!=', 'comment')]}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- social.bit.comments tree view -->
    <record id="social_bit_comments_view_tree" model="ir.ui.view">
        <field name="name">social.bit.comments.view.tree</field>
        <field name="model">social.bit.comments</field>
        <field name="arch" type="xml">
            <tree>
                <field name="partner_id"/>
                <field name="utm_campaign_id"/>
                <field name="post_id"/>
                <field name="record_type"/>
                <field name="comment"/>
                <field name="rating" />
            </tree>
        </field>
    </record>

    <!-- social.bit.comments action window -->
    <record id="comments_model_name_action" model="ir.actions.act_window">
        <field name="name">Social Comments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">social.bit.comments</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
            </p><p>
                <!-- More details about what a user can do with this object will be OK --> 
            </p>
        </field>
    </record>
     
    <!-- This Menu Item must have a parent and an action -->
     <menuitem id="comments_bit_menu_act" name="Social Comments" parent="social.menu_social_configuration" action="comments_model_name_action" sequence="100"/>
     <menuitem id="menu_midar_statistics_eng" name="Social Engagements" parent="menu_midar_statistics" action="comments_model_name_action" sequence="20"/>
</odoo>