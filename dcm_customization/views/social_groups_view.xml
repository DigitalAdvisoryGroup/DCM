<odoo>
<data>
    <!-- social.partner.group tree view -->
    <record id="social_partner_group_view_tree" model="ir.ui.view">
        <field name="name">social.partner.group.view.tree</field>
        <field name="model">social.partner.group</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="partner_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <!-- social.partner.group form view -->
    <record id="social_partner_group_view_form" model="ir.ui.view">
        <field name="name">social.partner.group.view.form</field>
        <field name="model">social.partner.group</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="partner_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- social.partner.group action window -->
    <record id="social_partner_group_action" model="ir.actions.act_window">
        <field name="name">Social Groups</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">social.partner.group</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
            </p><p>
            </p>
        </field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="social_partner_group_menu_act" name="Social Groups" parent="social.menu_social_configuration" action="social_partner_group_action" sequence="20"/>
</data>
</odoo>