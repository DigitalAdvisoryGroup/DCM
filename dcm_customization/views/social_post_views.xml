<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
    <record id="social_post_view_form" model="ir.ui.view">
        <field name="name">social.post.view.form.inherit.bit</field>
        <field name="model">social.post</field>
        <field name="inherit_id" ref="social.social_post_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='previews_placeholder']" position="inside">
                <field name="display_bit_preview" invisible="1" />
                <field name="bit_preview" readonly="1" nolabel="1" colspan="2" widget="social_post_preview"
                    attrs="{'invisible': [('display_bit_preview', '=', False)]}"
                    class="o_social_preview_wrapper m-0 px-4 py-5 bg-200"/>
            </xpath>
            <xpath expr="//field[@name='message']" position="attributes">
                <attribute name="class">o_social_post_message_wrapper o_social_post_message_wrapper_custome</attribute>
            </xpath>
            <xpath expr="//field[@name='scheduled_date']" position="after">
                <field name="social_groups_ids" widget="many2many_tags"  attrs="{'invisible':[('is_bit_post','=',False)],'required':[('is_bit_post','=',True)],'readonly':[('state','!=','draft')]}"/>
                <field name="social_partner_ids" widget="many2many_tags" invisible="1" />
                <field name="like_partner_ids" widget="many2many_tags" invisible="1" />
                <field name="share_ids" widget="many2many_tags" invisible="1" />
                <field name="comments_ids" invisible="1" >
                    <tree>
                        <field name="partner_id" />
                        <field name="comment" />
                    </tree>
                </field>
                <field name="is_bit_post" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="social_post_view_kanban_dcm" model="ir.ui.view">
        <field name="name">social.post.view.kanban.inherit.bit</field>
        <field name="model">social.post</field>
        <field name="inherit_id" ref="social.social_post_view_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='engagement']" position="after">
                <field name="like_partner_ids" />
                <field name="is_bit_post" />
            </xpath>
            <!-- <xpath expr="//span[@t-esc='record.engagement.raw_value']" position="replace">
                <span t-esc="record.like_partner_ids.length" t-if="record.is_bit_post.raw_value"/>
                <span t-esc="engagement" t-if="!record.is_bit_post.raw_value"/>
            </xpath> -->
            <xpath expr="//div[@t-if='has_attachments']" position="replace">
                <div t-if="has_attachments and !record.is_bit_post"
                    class="o_social_stream_post_image d-flex mx-n3 overflow-hidden"
                    t-att-data-images="record.image_urls.raw_value">
                    <t t-set="image_urls_json" t-value="JSON.parse(record.image_urls.raw_value)"/>

                    <t t-foreach="image_urls_json.length > 2 ? image_urls_json.slice(0, 2) : image_urls_json" t-as="image_url">
                        <t t-if="image_url_index == 1 &amp; record.image_ids.raw_value.length > 2">
                            <a class="o_social_stream_post_image_more position-relative d-flex ml-1" t-att-data-current-index="1">
                                <img class="o_social_stream_post_image_click" t-att-src="image_urls_json[1]" alt="Post Image" />
                                <div class="o_social_stream_post_image_more_overlay d-flex align-items-center h-100 w-100 text-white justify-content-center position-absolute h1 m-0" style="user-select: none;">
                                    +<t t-esc="image_urls_json.length - 2"/>
                                </div>
                            </a>
                        </t>
                        <img t-else="" class="o_social_stream_post_image_click" t-att-src="image_url" alt="Post Image" t-att-data-current-index="image_url_index" />
                    </t>
                </div>
                <div t-if="has_attachments and record.is_bit_post"
                    class="o_social_stream_post_image d-flex mx-n3 overflow-hidden"
                    t-att-data-images="record.image_urls.raw_value">
                    <t t-set="image_urls_json" t-value="JSON.parse(record.image_urls.raw_value)"/>

                    <t t-foreach="image_urls_json.length > 2 ? image_urls_json.slice(0, 2) : image_urls_json" t-as="image_url">
                        <t t-if="image_url_index == 1 &amp; record.image_ids.raw_value.length > 2">
                            <a class="o_social_stream_post_image_more position-relative d-flex ml-1" >
                                <img t-attf-src="#{image_url['url']}" alt="Post Image" t-if="image_url.mimetype"/>
                                <video width="200"  t-attf-src="#{image_url.url}" t-if="!image_url.mimetype" alt="Post Image" controls="controls"/>
                                <div class="o_social_stream_post_image_more_overlay d-flex align-items-center h-100 w-100 text-white justify-content-center position-absolute h1 m-0" style="user-select: none;">
                                    +<t t-esc="image_urls_json.length - 2"/>
                                </div>
                            </a>
                        </t>
                        <video t-if="image_url_index &lt; 2 and !image_url.mimetype"  width="200"  t-attf-src="#{image_url.url}" alt="Post Image" controls="controls"  t-att-data-current-index="image_url_index"/>
                        <img t-if="image_url_index &lt; 2 and image_url.mimetype" t-attf-src="#{image_url.url}" alt="Post Image"/>
                    </t>
                </div>
            </xpath>

        </field>
    </record>

    
</data>
</odoo>
