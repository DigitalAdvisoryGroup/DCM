<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="import_dashboard_wizard" model="ir.ui.view">
        <field name="name">import.dashboard.wizard.form</field>
        <field name="model">import.dashboard.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Dashboard">
                <group>
                    <group>
                        <field name="file" filename="file_name" widget="binary" class="oe_inline"/>
                    </group>
                    <field name="file_name" invisible="1"/>
                </group>
                <footer>
                    <button string="Import" name="import_button" icon='fa-cloud-upload' type="object"
                            class="btn-primary"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
