<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='integration']" position="after">
                <h2>Firebase Notification</h2>
                <div class="row mt16 o_settings_container" id="fcm">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="fcm_api_key"/>
                            <field name="fcm_api_key" readonly="0" />
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="fcm_title_message"/>
                            <field name="fcm_title_message" readonly="0" />
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="fcm_reply_title_message"/>
                            <field name="fcm_reply_title_message" readonly="0" />
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="upload_limit"/>
                            <field name="upload_limit" readonly="0" />
                        </div>
                    </div>
                </div>
                <h2>Accept Privacy and Policy Terms URL</h2>
                <div class="row mt16 o_settings_container" id="fcm">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="privacy_policy_url"/>
                            <field name="privacy_policy_url" readonly="0" />
                        </div>
                    </div>
                </div>
                <h2>Iframe Access Token</h2>
                <div class="row mt16 o_settings_container" id="iframe">
                    <div class="col-xs-12 col-md-6">
                        <div class="o_setting_right_pane">
                            <label for="iframe_acess_token"/>
                            <field name="iframe_acess_token" readonly="0" />
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6">
                        <div class="o_setting_right_pane">
                            <label for="iframe_url"/>
                            <field name="iframe_url" readonly="1" force_save="1"/>
                        </div>
                    </div>
                </div>
            </xpath>

        </field>
    </record>


</odoo>