<odoo>
    <data>
        <!-- theme.wizard form view -->
        <record id="theme_wizard_view_form" model="ir.ui.view">
            <field name="name">theme.wizard.view.form</field>
            <field name="model">theme.wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <group>
                        <field name="theme_ids" mode="kanban" readonly="1" options="{'no_create':1}" nolabel="1">
                            <kanban js_class="o_custom_theme_kanban" create="false" edit="0" delete="0">
                                <field name="image"/>
                                <field name="name"/>
                                <field name="id"/>
                                <templates>
                                    <t t-name="kanban-box">
                                        <div t-attf-class="oe_kanban_global_click" style="width:250px !important;">
                                            <h4 style="text-align:center;"><field name="name"/></h4>
                                            <div class="d-none d-md-block"  t-attf-style="background-image:url('#{kanban_image('mail.themes', 'image', record.id.raw_value,  placeholder)}');height:200px;width:200px;background-size: cover;margin-left: 11%;">
                                            </div>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                        </field>
                        
                    </group>
                    <footer>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="theme_wizard_view_forms" model="ir.ui.view">
            <field name="name">theme.wizard.view.form</field>
            <field name="model">theme.wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <group>
                        <field name="mass_mailing_id" invisible="1"/>
                        <field name="body_arch" invisible="1"/>
                        <field name="body_html" invisible="1"/>
                        <field name="name" required="1"/>
                        <field name="image" widget="image" />
                    </group>
                    <footer>
                        <button name="action_save_template" type="object" string="Save Theme" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo> 