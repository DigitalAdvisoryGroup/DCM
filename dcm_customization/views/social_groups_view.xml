<odoo>
<data>
    <!-- social.partner.group tree view -->
    <record id="social_partner_group_view_tree" model="ir.ui.view">
        <field name="name">social.partner.group.view.tree</field>
        <field name="model">social.partner.group</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="partner_ids" />
            </tree>
        </field>
    </record>

    <!-- social.partner.group form view -->
    <record id="social_partner_group_view_form" model="ir.ui.view">
        <field name="name">social.partner.group.view.form</field>
        <field name="model">social.partner.group</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button order-4" name="action_subscriber_list" type="object" icon="fa-user" attrs="{'invisible':[('child_ids','=',False)]}">
                            <field name="child_total_count" string="Child Subscriber" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button order-4" name="action_subscriber_list_total" type="object" icon="fa-user">
                            <field name="total_count" string="Total Subscriber" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <field name="name" />
                        <field name="id" invisible="1"/>
                        <field name="parent_id" domain="[('parent_id','=',False),('id','!=',id)]"/>
                        <field name="partner_ids" />
                        <field name="child_ids" invisible="1"/>
                        <field name="parent_id" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- social.partner.group action window -->
    <record id="social_partner_group_action" model="ir.actions.act_window">
        <field name="name">Social Groups</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">social.partner.group</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
            </p><p>
            </p>
        </field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="social_partner_group_menu_act" name="Social Groups" parent="social.menu_social_configuration" action="social_partner_group_action" sequence="20"/>
</data>
</odoo>