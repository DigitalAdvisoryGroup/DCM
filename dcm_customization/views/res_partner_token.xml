<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- res.partner.token form view -->
        <record id="res_partner_token_view_form" model="ir.ui.view">
            <field name="name">res.partner.token.view.form</field>
            <field name="model">res.partner.token</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="partner_id" />
                            <field name="push_token" />
                            <field name="device_type" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- res.partner.token tree view -->
        <record id="model_name_view_tree" model="ir.ui.view">
            <field name="name">res.partner.token.view.tree</field>
            <field name="model">res.partner.token</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="partner_id" />
                    <field name="device_type" />
                    <field name="active" />
                </tree>
            </field>
        </record>

        <!-- res.partner.token search view -->
        <record id="res_partner_token_view_search" model="ir.ui.view">
            <field name="name">res.partner.token.view.search</field>
            <field name="model">res.partner.token</field>
            <field name="arch" type="xml">
                <search string="Search Description">
                    <field name="partner_id" />
                    <field name="push_token" />
                    <field name="device_type" />
                    <filter string="Apple Devices" name="my_invoice" domain="[('device_type','=','ios')]"/>
                    <filter string="Android Devices" name="my_invoice" domain="[('device_type','=','android')]"/>
                    <group expand="1" string="Group By">
                        <filter string="Device Type" name='device_type' context="{'group_by':'device_type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- res.partner.token pivot view -->
        <record id="res_partner_token_view_pivot" model="ir.ui.view">
            <field name="name">res.partner.token.view.pivot</field>
            <field name="model">res.partner.token</field>
            <field name="arch" type="xml">
                <pivot string="Pivot Description">
                    <!-- Add your fields here -->
                    <field name="partner_id" />
                    <field name="device_type" type="col"/>
                </pivot>
            </field>
        </record>


        <record id="res_partner_token_view_graph" model="ir.ui.view">
            <field name="name">res.partner.token.graph</field>
            <field name="model">res.partner.token</field>
            <field name="arch" type="xml">
                <graph string="User Evolment" type="bar" >
                    <field name="create_date" interval="week"/>
                    <field name="device_type" />
                </graph>
            </field>
        </record>

        <!-- res.partner.token action window -->
        <record id="res_partner_token_action" model="ir.actions.act_window">
            <field name="name">Device Token</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner.token</field>
            <field name="view_mode">tree,form,graph,pivot</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p><p>
                    <!-- More details about what a user can do with this object will be OK --> 
                </p>
            </field>
        </record>


        <record id="res_partner_token_graph_action" model="ir.actions.act_window">
            <field name="name">User evolvmentttt</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner.token</field>
            <field name="view_mode">tree,form,graph,pivot</field>
            <field name="context">{'click_graph':'1'}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p><p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>

        <!-- This Menu Item an action -->
        <menuitem id="res_partner_token_menu_act" name="Device Token" parent="social.menu_social_configuration" action="res_partner_token_action" sequence="100"/>


        <menuitem id="menu_midar_statistics" name="Statistics" parent="social.menu_social_global" sequence="10"/>

        <menuitem id="menu_midar_statistics_token" name="User evolvmentttt" parent="menu_midar_statistics" action="res_partner_token_graph_action" sequence="10"/>




    </data>
</odoo>